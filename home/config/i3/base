# Please see http://i3wm.org/docs/userguide.html for a complete reference!
# alt
set $mod Mod1
set $sup Mod4

# set variable browser to env var or firefox if env var is not set
set $browser firefox
set $term alacritty
set $lock_command ~/bin/lock_command.sh
set $bar_command ~/bin/polybar.sh

# start a terminal
bindsym $mod+Return exec --no-startup-id "$term"

# launcher, window switcher
bindsym $mod+d exec --no-startup-id "rofi -show drun -modi drun,run,window,ssh -show-icons -sidebar-mode -lines 8 -terminal $term"

# Web browser
bindsym $mod+w exec --no-startup-id "$browser"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# change focus
# configured for vim-like keys
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
# configured to vim-like keys - hjkl
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal/vertical orientation
# configured like my tmux config: horizontal: e, vertical: o
bindsym $mod+e split h
bindsym $mod+o split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Move floating container to the center of all outputs
bindsym $mod+c move absolute position center

# Move container to the current position of the cursor
bindsym $mod+m move position mouse

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# lock
bindsym $mod+Ctrl+l exec --no-startup-id $lock_command

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ntilde resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bindsym $mod+Tab exec "rofi -show window -show-icons"

# srcery-based palette

set $black         #1C1B19
set $brightblack   #2D2C29
set $red           #EF2F27
set $brightred     #F75341
set $green         #519F50
set $brightgreen   #98BC37
set $yellow        #FBB829
set $brightyellow  #FED06E
set $blue          #2C78BF
set $brightblue    #68A8E4
set $magenta       #E02C6D
set $brightmagenta #FF5C8F
set $cyan          #0AAEB3
set $brightcyan    #53FDE9
set $white         #918175
set $brightwhite   #FCE8C3
set $orange        #D75F00
set $brightorange  #FF8700
set $xgrey1        #262626
set $xgrey2        #303030
set $xgrey3        #3A3A3A
set $xgrey4        #444444
set $xgrey5        #4E4E4E
set $gtk_theme_main #383838

# set window colors
#                       border          background       text           indicator
client.focused          $gtk_theme_main $gtk_theme_main  $yellow        $brightyellow
client.unfocused        $black          $black           $brightwhite   $orange
client.focused_inactive $black          $black           $brightyellow  $orange
client.urgent           $yellow         $black           $brightwhite   $orange

# floating windows
for_window [class="(?i)pavucontrol"] floating enable
for_window [class="(?i)nm-applet"] floating enable
for_window [class="(?i)gpick"] floating enable
for_window [class="(?i)feh"] floating enable
for_window [class="(?i)blueman-manager"] floating enable
for_window [class="(?i)nm-connection-editor"] floating enable
for_window [class="(?i)jetbrains-toolbox"] floating enable
for_window [class="(?i)lxappearance"] floating enable
for_window [class="(?i)tk"] floating enable
for_window [class="(?i)pyxel"] floating enable
for_window [class="(?i)gsimplecal"] floating enable
# floating windows settings
floating_minimum_size 240 x 100

# disable window titlebars, set border size
for_window [class="^.*"] border pixel 1


exec --no-startup-id "setxkbmap"
# Ctrl instead of CapsLock
exec --no-startup-id "setxkbmap -option ctrl:nocaps"
# compositor - transparency, shadows and such
exec --no-startup-id "compton --config ~/.compton.conf -b"
# simple notification daemon
exec --no-startup-id "dunst"
# secrets handler for network manager applet to store passwords in
exec --no-startup-id "gnome-keyring-daemon -d"
# turn screen off after specified time (seconds)
# exec --no-startup-id "xset dpms 600"
# lock screen after given time (minutes) using i3lock fork
exec --no-startup-id "xautolock -time 5 -locker $lock_command"
# blue light filter (uses geoclue for location - intensity depends on daylight)
exec --no-startup-id "redshift-gtk"
# handle wallpaper
exec --no-startup-id "nitrogen --restore"
# automount external drives etc
exec --no-startup-id "udiskie"
# gui for network manager
exec --no-startup-id "nm-applet"
# gui for bluetooth devices management
exec --no-startup-id "blueman-applet"
# clipboard manager
exec --no-startup-id "clipit"
# pulseaudio sys tray
exec --no-startup-id "pasystray"
# tray and status bar
exec_always --no-startup-id "$bar_comand"
