# My term terminfo entry might not be recognized on remote hosts, so:
alias ssh='TERM=xterm-256color ssh'

# Enable color codes parsing in watch
alias watch='watch --color'

# Go to git repo root dir
alias cdr='cd $(git rev-parse --show-toplevel)'

# Color output aliases. Keep those in mind when redirecting the output.
# Aliases might also be set in /etc/grc.zsh
alias ls='grc ls --color=always'
