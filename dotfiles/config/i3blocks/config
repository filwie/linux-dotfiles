# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
align=justify
color=#F2E5BC
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=10
markup=pango

[test_blocklet]
interval=3

[mediaplayer]
instance=spotify
interval=5
signal=10

[temperature]
label=
interval=10


[memory]
label=
